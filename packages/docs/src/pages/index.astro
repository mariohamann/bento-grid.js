---
import Hero from "../partials/Hero.astro";
import InstallationUsage from "../partials/InstallationUsage.astro";
import GitHub from "../partials/GitHub.astro";
import ElementsFillers from "../partials/ElementsFillers/ElementsFillers.astro";
import ConfigOption from "../components/ConfigOption.astro";
import ConfigTarget from "../partials/Config/Target.astro";
import ConfigCellGap from "../partials/Config/CellGap.astro";
import ConfigAspectRatio from "../partials/Config/AspectRatio.astro";
import ConfigBalanceFillers from "../partials/Config/BalanceFillers.astro";
import ConfigMinCellWidth from "../partials/Config/MinCellWidth.astro";
import ConfigColumns from "../partials/Config/Columns.astro";

import Footer from "../partials/Footer.astro";
---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<title>BentoGrid.js</title>
		<style is:global>
			.prose-stone {
				--tw-prose-bullets: var(--tw-prose-invert-bullets);
				--tw-prose-hr: var(--tw-prose-invert-hr);
			}
			/* m-plus-1-code-regular - latin */
			@font-face {
				font-display: swap; /* Check https://developer.mozilla.org/en-US/docs/Web/CSS/@font-face/font-display for other options. */
				font-family: "M PLUS 1 Code";
				font-style: normal;
				font-weight: 400;
				src: url("/fonts/m-plus-1-code-v7-latin-regular.woff2")
						format("woff2"),
					/* Chrome 36+, Opera 23+, Firefox 39+ */
						url("/fonts/m-plus-1-code-v7-latin-regular.woff")
						format("woff"); /* Chrome 5+, Firefox 3.6+, IE 9+, Safari 5.1+ */
			}

			/* m-plus-2-300 - latin */
			@font-face {
				font-display: swap; /* Check https://developer.mozilla.org/en-US/docs/Web/CSS/@font-face/font-display for other options. */
				font-family: "M PLUS 2";
				font-style: normal;
				font-weight: 400;
				src: url("/fonts/m-plus-2-v6-latin-300.woff2") format("woff2"),
					/* Chrome 36+, Opera 23+, Firefox 39+ */
						url("/fonts/m-plus-2-v6-latin-300.woff") format("woff"); /* Chrome 5+, Firefox 3.6+, IE 9+, Safari 5.1+ */
			}
			/* m-plus-2-500 - latin */
			@font-face {
				font-display: swap; /* Check https://developer.mozilla.org/en-US/docs/Web/CSS/@font-face/font-display for other options. */
				font-family: "M PLUS 2";
				font-style: normal;
				font-weight: 600;
				src: url("/fonts/m-plus-2-v6-latin-500.woff2") format("woff2"),
					/* Chrome 36+, Opera 23+, Firefox 39+ */
						url("/fonts/m-plus-2-v6-latin-500.woff") format("woff"); /* Chrome 5+, Firefox 3.6+, IE 9+, Safari 5.1+ */
			}
			.astro-code {
				background-color: rgb(2 2 2) !important;
				padding: 8px 16px;
				font-size: 16px;
				border-radius: 8px;
			}
			.astro-code span,
			code,
			kbd,
			samp,
			pre {
				font-family: "M PLUS 1 Code", ui-monospace, SFMono-Regular,
					Menlo, Monaco, Consolas, "Liberation Mono", "Courier New",
					monospace !important;

				font-size: 16px !important;
			}
		</style>
	</head>
	<body class='p-4 font-sans sm:p-6 md:p-8 lg:p-12 bg-sand-100'>
		<Hero />
		<GitHub />
		<div class='prose prose-stone mx-auto mt-24'>
			<InstallationUsage />
			<hr />
			<ElementsFillers />
			<hr />
			<h2 id='config'>UserConfig</h2>
			<ConfigTarget />
			<ConfigCellGap />
			<ConfigAspectRatio />
			<ConfigBalanceFillers />
			<ConfigMinCellWidth />
			<ConfigColumns />
			<ConfigOption name='breakpoints' />
			<ConfigOption name='breakpointReference' />
			<h2 id='config'>Breakpoint</h2>
			<ConfigOption name='cellGap' noDefault />
			<ConfigOption name='aspectRatio' noDefault />
			<ConfigOption name='minCellWidth' noDefault />
			<ConfigOption name='columns' noDefault />
			<blockquote>
				<b>Hint:</b> Further documentation is coming soon.
			</blockquote>
		</div>
		<Footer />
	</body>
</html>
