---
import { Code } from "astro/components";
import GridCode from "../../components/GridCode.astro";
import ConfigOption from "../../components/ConfigOption.astro";
---

<ConfigOption name='minCellWidth' noDefault />
<p></p>
<script>
	import BentoGrid from "@bentogrid/core";
	new BentoGrid({
		balanceFillers: true,
		cellGap: 6,
		target: "#bentogrid-config-min-cell-width",
		minCellWidth: 50,
		aspectRatio: 1,
	});
</script>

<GridCode
	id='bentogrid-config-min-cell-width'
	code={`new BentoGrid({
  minCellWidth: 50,
  balanceFillers: true,
  cellGap: 6,
  target: "#bentogrid-config-min-cell-width,
  aspectRatio: 1
});`}
	lang='js'
>
	<div data-bento='2x2'></div>
	<div data-bento='1x1'></div>
	<div data-bento='2x3'></div>
	<div data-bento='2x1'></div>
	<div data-bento='3x3'></div>
	<div data-bento='1x4'></div>
	<div data-bento='2x2'></div>
</GridCode>
