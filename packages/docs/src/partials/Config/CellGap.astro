---
import { Code } from "astro/components";
import GridCode from "../../components/GridCode.astro";
import ConfigOption from "../../components/ConfigOption.astro";
---

<ConfigOption name='cellGap' />
<p>In this example the cellGap is set to <code>24</code>.</p>

<script>
	import BentoGrid from "@bentogrid/core";
	new BentoGrid({
		cellGap: 24,
		target: "#bentogrid-config-cell-gap",
		columns: 8,
		aspectRatio: 1,
	});
</script>

<GridCode
	id='bentogrid-config-cell-gap'
	code={`new BentoGrid({
  cellGap: 24,
  target: "#bentogrid-config-cell-gap",
  columns: 8,
  aspectRatio: 1,
});`}
	lang='js'
>
	<div data-bento='2x2'></div>
	<div data-bento='1x1'></div>
	<div data-bento='2x3'></div>
	<div data-bento='2x1'></div>
	<div data-bento='3x3'></div>
	<div data-bento='1x4'></div>
	<div data-bento='2x2'></div>
</GridCode>
