---
import { Code } from "astro/components";
import GridCode from "../../components/GridCode.astro";
import ConfigOption from "../../components/ConfigOption.astro";
---

<ConfigOption name='columns' noDefault />
<p></p>
<script>
	import BentoGrid from "@bentogrid/core";
	new BentoGrid({
		cellGap: 6,
		target: "#bentogrid-config-columns",
		columns: 5,
		aspectRatio: 1,
	});
</script>

<GridCode
	id='bentogrid-config-columns'
	code={`new BentoGrid({
  columns: 5,
  balanceFillers: true,
  cellGap: 6,
  target: "#bentogrid-config-columns,
  aspectRatio: 1,
});`}
	lang='js'
>
	<div data-bento='2x2'></div>
	<div data-bento='1x1'></div>
	<div data-bento='2x3'></div>
	<div data-bento='2x1'></div>
	<div data-bento='3x3'></div>
	<div data-bento='1x4'></div>
	<div data-bento='2x2'></div>
</GridCode>
